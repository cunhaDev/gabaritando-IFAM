<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main_1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Menu De Questões"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bttela2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttela4"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:text="Informatica Basica" />

    <Button
        android:id="@+id/bttela4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttela2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Direitos Administrativos"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bttela4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Sair" />

    <Button
        android:id="@+id/bttela5"
          android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttela4"
        android:layout_below="@+id/bttela4"
        android:layout_marginTop="15dp"
        android:text="Raciocinio Lógico" />

</RelativeLayout>